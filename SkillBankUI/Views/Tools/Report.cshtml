@model SkillBank.Site.Web.ViewModel.ReportNumModel
@section HeaderStyle
{
@Html.CombresCustomUrl("contentCss")}
<style type="text/css">
    .rep {
        margin:30px 0 100px 100px;
    }
    .reptitle {
        width:800px;height:80px;font-weight:900;color:#1f0463;font-size:18px;
    }
    .repcol1 {
        width: 200px;
    }
    
</style>

<div class="rep">
@if (ViewBag.IsAdmin)
{
    <h2>用户数据Report</h2>
    <table>
    @foreach (var reportItem in Model.ReportNumList)
    {   <tr style="width:800px;"><td style="width:200px;">&nbsp;</td><td style="width:200px;">&nbsp;</td><td style="width:200px;">&nbsp;</td><td style="width:200px;">&nbsp;</td></tr>
       
        <tr class="reptitle">
        @if (reportItem.RowNum.Equals(0))
        {     <td style="width:250px;">2小时注册</td><td style="width:250px;">4小时注册</td><td style="width:250px;">8小时注册</td>
        }
        else if (reportItem.RowNum.Equals(1))
        {     <td>@DateTime.Now.ToString("yy-MM-dd") 今天</td><td>@DateTime.Now.AddDays(-1).ToString("yy-MM-dd") 昨天</td><td>@DateTime.Now.AddDays(-2).ToString("yy-MM-dd") 前天</td>
        }else if (reportItem.RowNum.Equals(2))
        {     <td>开课的</td><td>注册的</td><td>百分比</td>
        }else if (reportItem.RowNum.Equals(3)){
             <td>分享的</td><td>开课的</td><td>百分比</td>
        }
        else if (reportItem.RowNum.Equals(4)){
             <td>完成的</td><td>没有取消和拒绝的订单数</td><td>百分比</td>
        } 
        else if (reportItem.RowNum.Equals(5)){
             <td>拒绝的订单</td><td>总订单</td><td>百分比</td>
        } 
        else if (reportItem.RowNum.Equals(6)){
             <td>上完课的学生</td><td>预定课的学生</td><td>百分比</td>
        } 
        else if (reportItem.RowNum.Equals(7)){
             <td>接受预定订老师</td><td>被订课老师</td><td>百分比</td>
        } 
        else if (reportItem.RowNum.Equals(8)){
             <td>课程总数</td><td></td><td></td><td></td>
        } 
        else if (reportItem.RowNum.Equals(9)){
             <td>注册男生数</td><td>注册女生数</td><td>男生所占百分比</td>
        } 
        else if (reportItem.RowNum.Equals(10)){
             <td>开课男生数</td><td>开课女生数</td><td>男生所占百分比</td>
        }   
        </tr>
        <tr>
            <td>@reportItem.Num1</td><td>@reportItem.Num2</td><td>@(reportItem.RowNum.Equals(0)?Convert.ToInt16(reportItem.Percentage):reportItem.Percentage)</td><td></td>
        </tr>
    }
    </table>
    }else{
  <p>Sorry,您没有查看权限</p>
}
</div>

