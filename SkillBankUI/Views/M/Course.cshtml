@model SkillBank.Site.Web.ViewModel.ClassDetailModel
@{
    ViewBag.Title = "Course";
    Layout = "~/Views/Shared/_MobileLayout.cshtml";
}

<!-- bug hack -->
<header class="bar-nav"></header>

<div class="course-page bar bar-footer">
    <a href="#reservation">
        <button class="btn btn-yellow">预定课程</button>
    </a>
    <a href="#privateMsg">
        <button class="btn btn-yellow">私信老师</button>
    </a>
</div>
<div class="course-page content">
    <a href="index.html" class="icon icomoon icon-arrow-left nav-inner nav-left" data-transition="slide-out"></a>
    <div class="cover-box">
        <a href="#getCoins" class="ico-coin">
            <span>价格</span>
            <hr>
            <span>1课币</span>
        </a>

        <img src="@(!String.IsNullOrEmpty(Model.ClassInfo.Cover) ? ContentHelper.GetClassCoverPath(Model.ClassInfo.Cover, "mb") : "/img/default_cover.png")" alt="" class="cover pull-left">

        <h3 class="white">@Model.ClassInfo.Title</h3>
        <div class="title-list">
            <a href="#" class="goto" data-for="comment">
                <span class="icon icomoon icon-comment"></span>
                <span>23</span>
                <span>留言</span>
            </a>
            <a href="#" class="favorite">
                <span class="icon icomoon icon-heart"></span>
                <span>6</span>
                <span>赞</span>
            </a>
            <a href="#" class="olive">
                <span class="icon icomoon icon-redo"></span>
                <span>转发</span>
            </a>
        </div>
    </div>



    <div class="info">
        <a href="@Url.Action("index", "profile", new { id = Model.MemberInfo.MemberId })">
            <img src="@ContentHelper.GetAvatarPath(Model.MemberInfo.Avatar, "h", Model.MemberInfo.SocialType)" alt="" class="avatar">
        </a>
        <h3>@Model.MemberInfo.Name</h3>
        <p>6km . 上海</p>
        <a href="#">
            <button class="btn btn-olive">关注</button></a>
        <div class="evaluation">
            <h5>老师自评</h5>
            <div class="table">
                <a class="table-item border-right" href="#">
                    <h3 class="num">@(Model.ClassInfo == null ? 0 : Model.ClassInfo.TeacheLevel)</h3>
                    <span class="tab-label">技能水平</span>
                </a>
                <a class="table-item" href="#">
                    <h3 class="num">@(Model.ClassInfo == null ? 0 : Model.ClassInfo.SkillLevel)</h3>
                    <span class="tab-label">教学水平</span>
                </a>
            </div>
        </div>
    </div>

    <div class="course-detail">
        <h3>课程介绍
        </h3>
        <p class="padded-tex">
            @Html.Raw(TextContentHelper.GetTextContent(Model.ClassInfo.Summary))
        </p>
        @if (!String.IsNullOrEmpty(Model.ClassInfo.WhyU))
        {
            <p class="padded-tex">
                @Html.Raw(TextContentHelper.GetTextContent(Model.ClassInfo.WhyU))
            </p>
        }

        <h4>
            <img src="/images/icons/icon-tag.png">
            <span>一节课用时</span>
        </h4>
        @if (!String.IsNullOrEmpty(Model.ClassInfo.Period))
        {
            <p>@Html.Raw(TextContentHelper.GetTextContent(Model.ClassInfo.Period))</p>
        }
        else
        {
            <p>待定</p>
        }

        <h4>
            <img src="/images/icons/icon-tag.png">
            <span>上课地点</span>
        </h4>
        @if (!String.IsNullOrEmpty(Model.ClassInfo.Location))
        {<p>
            @Html.Raw(TextContentHelper.GetTextContent(Model.ClassInfo.Location))
        </p>
        }
        else
        {
            <p>待定</p>
        }
        <h4>
            <img src="/images/icons/icon-tag.png">
            <span>能上课时间</span>
        </h4>
        @if (!String.IsNullOrEmpty(Model.ClassInfo.Available))
        {
            <p>
                @Html.Raw(TextContentHelper.GetTextContent(Model.ClassInfo.Available))
            </p>
        }
        else
        {
            <p>待定</p>
        }

        <h4>
            <img src="/images/icons/icon-tag.png">
            <span>课前须知</span>
        </h4>
        @if (!String.IsNullOrEmpty(Model.ClassInfo.Remark))
        {
            <p>
                @Html.Raw(TextContentHelper.GetTextContent(Model.ClassInfo.Remark))
            </p>
        }
        else
        {
            <p>待定</p>
        }
    </div>
