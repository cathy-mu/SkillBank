<!--Teacher give Student Feebback-->
<div class="modal fade modal-feedback-student" id="modal-feedback-student" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                <div class="bd">

                    <h4><i class="fa fa-envelope"></i>@Html.GetTrans(349) - <label id="feedback-classname"></label></h4>
                    <p class="gray-light spaced-large">@Html.GetTrans(440) : <label id="feedback-bookdate"></label></p>

                    <div class="row-fluid spaced-larger">
                        <div class="span2">
                            <img  id="feedback-avatar" src="" class="avatar-m" />
                        </div>
                        <div class="span10">
                            @Html.GetTrans(485)
                            <br>
                            <strong><label id="feedback-name"></label></strong>
                        </div>
                    </div>

                    <div class="row-fluid spaced">
                        <div class="span2">@Html.GetTrans(346)</div>
                        <div class="span10 form-inline">  <label for="8976" class="control-label spaced-right feedback" data-value="3"><input type="radio" name="feedback" id="good" value="3"> <span class="label label-warning label-good">@Html.GetTrans(213)</span></label>
                          <label for="3544" class="control-label spaced-right feedback" data-value="2"><input type="radio" name="feedback" id="ok" value="2"> <span class="label label-success label-okay">@Html.GetTrans(214)</span></label>
                          <label for="1887" class="control-label feedback" data-value="1"><input type="radio" name="feedback" id="bad" value="1"> <span class="label label-default label-bad">@Html.GetTrans(215)</span></label>
                        <span class="required">*</span></div>
                    </div>

                    <div class="row-fluid spaced">
                        <div class="span2">@Html.GetTrans(347)</div>
                        <div class="span10">
                            <textarea name="" rows="4" class="form-control span12" id="feedback-comment"></textarea>
                        </div>
                    </div>

                    <div class="row-fluid"><input type="hidden" id="feedback-hidorderid" />
                        <div class="span12 tright">
                            <input type="button" class="btn btn-primary" value="@Html.GetTrans(352)" id="feedback-subbtn">
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
<!-- end of modal: feedback student -->
