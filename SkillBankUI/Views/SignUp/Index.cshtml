@if (!ViewBag.isMobile)
{
@section HeaderStyle
{@Html.CombresCustomUrl("signUpCss")}
@section FooterJs
{@Html.CombresCustomUrl("signUpJs")}

<div class="body">
    <div class="inner">

        <div class="signup-box">
            <div class="signup-box-hd">
                <div class="row-fluid">
                    <div class="span3">
                        <img id="signup-socialavatar" src="@(String.IsNullOrEmpty(ViewBag.SocialAvatar) ? "about:blank" : ContentHelper.GetAvatarPath(ViewBag.SocialAvatar, "m", ViewBag.SocialType))" class="avatar-m">
                    </div>
                    <div class="span9">
                        <div class="spaced-small">@Html.GetTrans(577)</div>
                        <div class="spaced" id="signup-socialname" style="font-weight:700;">@(String.IsNullOrEmpty(ViewBag.SocialName) ? "" : ViewBag.SocialName)</div>
                    </div>
                </div>
            </div>
            <div class="signup-box-bd">
                <form class="signup-form" role="form">
                    <!--[if lt IE 9]>
                    <div class="row-fluid spaced">
                        <div class="span12">&nbsp;@ResourceHelper.GetTransText(317).Trim()</div>
                    </div>
                    <![endif]-->
                    <div class="row-fluid spaced">
                        <div class="span12">
                            <input type="text" class="form-control" id="signup-name" placeholder="@ResourceHelper.GetTransText(317).Trim()">
                        </div>
                    </div>
                    <!--[if lt IE 9]>
                    <div class="row-fluid spaced">
                        <div class="span12">&nbsp;@ResourceHelper.GetTransText(227).Trim()</div>
                    </div>
                    <![endif]-->
                    <div class="row-fluid spaced">
                        <div class="span12">
                            <input type="text" class="form-control" id="signup-email" placeholder="@ResourceHelper.GetTransText(227).Trim()">
                        </div>
                    </div>

                    <!--<div class="row-fluid spaced">
                                    <div class="span12"><label for="2903"><input type="checkbox" id="signup-follow">@Html.GetTrans(466)</label></div>
                                  </div>-->

                    <div class="row-fluid spaced">
                        <div class="span12">
                            <button type="button" class="btn btn-primary btn-block" id="signup-subbtn">注册<!--@Html.GetTrans(173)--></button>
                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
<!-- end of body -->
<input type="hidden" id="signup-referurl" />
<input type="hidden" id="signup-mid" value="@ViewBag.MemberId" />
<input type="hidden" id="signup-hidtype" value="@ViewBag.SocialType" />
<input type="hidden" id="signup-hidname" value="@ViewBag.SocialName" />
<input type="hidden" id="signup-hidavatar" value="@ViewBag.SocialAvatar" />
<input type="hidden" id="signup-hidsid" value="@ViewBag.SocialAccount" />
<input type="hidden" id="signup-test" value="@ViewBag.SocialInfo" />
}else{

    
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MobileLayout.cshtml";
    
    
    <div class="content has-header" id="register-page">
    <a href="#" class="icon icomoon icon-arrow-left nav-inner nav-left grey nav-back" data-transition="slide-out"></a>

    <div class="info">
        <img src="@(String.IsNullOrEmpty(ViewBag.SocialAvatar) ? "about:blank" : ContentHelper.GetAvatarPath(ViewBag.SocialAvatar, "mm", ViewBag.SocialType))" alt="" class="avatar">
        <p>欢迎 @(String.IsNullOrEmpty(ViewBag.SocialName) ? "" : ViewBag.SocialName)</p>
    </div>

    <div class="register_form">
        <form>
            <div class="input-group">
                <input type="number" placeholder="手机号码" name="phone">
            </div>
            <div class="input-group">
                <input type="text" placeholder="验证码" name="code" maxlength="6">
                <button class="btn btn-grey" type="button">获得验证码</button>
            </div>
            <div class="input-group">
                <button class="btn btn-olive btn-block" name="registebtn"  id="registebtn" type="button" data-avatar="@ViewBag.SocialAvatar" data-name="@ViewBag.SocialName" data-socialid="@ViewBag.SocialAccount" data-socialtype="@ViewBag.SocialType">注册</button>
            </div>
            <div class="input-group">
                <p>
                    <input type="checkbox" checked="checked" class="pass-checkbox">
                    <small>我已经阅读并同意 <a href="#">使用条款和隐私政策</a></small>
                </p>
            </div>
        </form>
    </div>
</div>
<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script src="/bower_components/lodash/dist/lodash.min.js"></script>

}
